#include <stdio.h> 
#define MAX 10 
 
int main() 
{ 
    int i,j; 
    
   // 'for' loop    
  for(i=0;i<MAX;I++){
  
 // nested 'for' loop
        for(j=0;j<MAX;j++){				 
           
 // if statement, very important
          if(i+j<MAX){					 
                printf("* "); 
            }else{ 
			    printf("  "); 
			} 
        } 
        printf("\n"); 
    } 
    return 0; 
} 
